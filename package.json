{
	"name": "regex-playground-visual",
	"description": "Interactive visual tool for learning regular expressions with step-by-step animations and gamified lessons",
	"version": "1.0.0",
	"type": "module",
	"keywords": [
		"regex",
		"regular-expressions",
		"learn",
		"tutorial",
		"visual",
		"interactive",
		"education",
		"playground",
		"svelte",
		"tailwindcss",
		"i18n"
	],
	"author": "Pixel Du Nord",
	"license": "MIT",
	"homepage": "https://github.com/Draka/regex-playground-visual#readme",
	"repository": {
		"type": "git",
		"url": "https://github.com/Draka/regex-playground-visual.git"
	},
	"bugs": {
		"url": "https://github.com/Draka/regex-playground-visual/issues"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test": "npm run test:lessons",
		"test:lessons": "node -e \"Promise.all([import('./src/lib/utils/lessonTester.js'), import('./src/lib/lessons/index.js')]).then(([tester, lessons]) => { const {testLessons, printTestReport} = tester; const {getLessons} = lessons; const results = testLessons([...getLessons('es'), ...getLessons('en')]); printTestReport(results); process.exit(results.passed ? 0 : 1); })\"",
		"deploy": "node scripts/deploy.js"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.22.0",
		"@icons-pack/svelte-simple-icons": "^6.4.0",
		"@inlang/paraglide-js": "^2.0.0",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/forms": "^0.5.9",
		"@tailwindcss/typography": "^0.5.15",
		"@tailwindcss/vite": "^4.0.0",
		"@types/node": "^22",
		"eslint": "^9.22.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"lucide-svelte": "^0.544.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"vite": "^7.0.4"
	},
	"dependencies": {
		"@aws-sdk/client-cloudfront": "^3.0.0",
		"@aws-sdk/client-s3": "^3.0.0",
		"@tweenjs/tween.js": "^25.0.0",
		"mime-types": "^2.1.35",
		"motion": "^12.23.22"
	}
}
